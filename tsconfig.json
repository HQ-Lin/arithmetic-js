{
    "compilerOptions": {
        "target": "esnext",
        "outDir": "package-js",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/types"],
        "types": ["node", "jest"]
    },
    "compileOnSave": true,
    "include": [
        "package-ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__test__/**"
    ]
}
